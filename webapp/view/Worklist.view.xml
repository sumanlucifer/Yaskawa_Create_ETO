<core:View xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified" xmlns:blockcolor="sap.uxap.sample.SharedBlocks" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.yaskawa.ETOWorkFlow.controller.Worklist" height="100%" busyIndicatorDelay="10" xmlns:l="sap.ui.layout">
	<m:App busyIndicatorDelay="10" id="Main">
		<m:Page busy="{objectViewModel>/busy}" showNavButton="false" showHeader="false" id="CREATE" navButtonPress="onBack">
			<m:content>
				<ObjectPageLayout id="ObjectPageLayout" subSectionLayout="{ConfigModel>/subSectionLayout}" useIconTabBar="true" flexEnabled="true"
					showTitleInHeaderContent="false" upperCaseAnchorBar="false">
					<headerTitle class="zhdrclass">
						<ObjectPageHeader objectTitle="Create ETO (Inside Sales)"/>
					</headerTitle>
					<headerContent>
						<m:VBox alignItems="Center">
							<m:HBox class="sapUiSmallMarginBegin" width="100%">
								<m:Label text="{i18n>salesOrder}" width="100px" textAlign="Left" required="true" design="Bold" class="sapUiTinyMarginEnd"/>
								<m:Input id="idSaleOrderInput" value="{HeaderDetailsModel>/Vbeln}"></m:Input>
								<m:Button press="onSearchSaleOrder" id="btnSaleOrder" text="GO"></m:Button>
							</m:HBox>
							<m:HBox class="sapUiSmallMarginBegin sapUiSmallMarginTop" width="100%">
								<m:Label text="Request Status" width="100px" textAlign="Left" design="Bold" class="sapUiTinyMarginEnd"/>
								<m:Input id="idReqStatus" value="New" editable="false"/>
							</m:HBox>
						</m:VBox>
					</headerContent>
					<sections>
						<ObjectPageSection>
							<subSections>
								<ObjectPageSubSection id="Step1" title="Order Details" mode="Expanded">
									<blocks>
										<m:VBox>
											<l:Grid containerQuery="true" defaultSpan="XL2 L4" class="sapUiSizeCompact">
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label width="10rem" text="Requested By"/>
													<m:Text id="idreqstdBy" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idShssrtTrxt" width="100%" value="{HeaderDetailsModel>/ReqestedBy}" maxLength="40"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label width="10rem" text="Order Date"/>
													<m:Text id="idOrdrDate" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<!--<m:Input id="idOrdDate" value="{HeaderDetailsModel>/OrderDate}" width="100%" editable="true"/>-->
														<m:DatePicker displayFormat="MM/dd/YYYY" valueFormat="yyyyMMdd"
															value="{path:'HeaderDetailsModel>/OrderDate', type: 'sap.ui.model.type.DateTime',formatOptions: { pattern: 'MM-dd-yyyy' } }"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label width="10rem" text="Ship Date"/>
													<m:Text id="idShipDate" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:DatePicker displayFormat="MM/dd/YYYY" valueFormat="yyyyMMdd"
															value="{path:'HeaderDetailsModel>/ShipDate', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'MM-dd-yyyy' } }"/>
														<!--<m:Input id="idShpDate" value="{HeaderDetailsModel>/ShipDate}" width="100%" editable="true"/>-->
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label width="10rem" text="Customer Representative"/>
													<m:Text id="idItemTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idItem" value="{HeaderDetailsModel>/CustReprsntv}" width="100%" editable="true"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Customer Name" width="10rem"/>
													<m:Text id="idAccAGnmntTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idItem2" value="{HeaderDetailsModel>/CustName}" width="100%" editable="true"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Customer Number" width="10rem"/>
													<m:Text id="idShrtTxtTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idShrtTxt" width="100%" value="{HeaderDetailsModel>/CustNumber}" maxLength="40"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Customer PO#" width="10rem"/>
													<m:Text id="idPoQtyTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idPoQty" value="{HeaderDetailsModel>/CustPo}" width="100%"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Distribution Channel" width="10rem"/>
													<m:Text id="idOunTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:ComboBox width="100%" selectedKey="{HeaderDetailsModel>/distributionChannelKey}" items="{HeaderDetailsModel>/distributionChannelDD}">
															<core:Item key="{HeaderDetailsModel>Vtweg}" text="{HeaderDetailsModel>Vtweg}"/>
														</m:ComboBox>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Quotation Number" width="10rem"/>
													<m:Text id="idNetPriceTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idShrtTrxt" width="100%" value="{HeaderDetailsModel>/QuotationNo}" maxLength="40"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Total Net $" width="10rem"/>
													<m:Text id="idDelvDtTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idItem3" value="{HeaderDetailsModel>/TotalNetValue}" width="100%" editable="true"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Customer No" width="10rem"/>
													<m:Text id="idRetPo" text=":" class="sapUiTinyMarginBegin"></m:Text>
													<m:VBox width="100%">
														<m:Input id="idGlAcc2" placeholder="" value="{HeaderDetailsModel>/CustNumber}" class="sapUiTinyMarginBegin" width="100%"/>
													</m:VBox>
												</m:HBox>
												<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">
													<m:Label text="Order Status" width="10rem"/>
													<m:Text id="idGlAccTxt" text=":" class="sapUiTinyMarginBegin"></m:Text>
													<m:VBox width="100%">
														<m:Input enabled="false" id="idwGlAcc2" placeholder="" value="{HeaderDetailsModel>/orderStatusSetKey}" class="sapUiTinyMarginBegin"
															width="100%"/>
													</m:VBox>
												</m:HBox>
												<!--<m:HBox width="100%" alignItems="Center" class="sapUiSmallMarginBegin">-->
												<!--	<m:Label id="idCstCntreLbl" text="Order Type" width="10rem"/>-->
												<!--	<m:Text id="idCstCntreTxt" text=":" class="sapUiTinyMarginBeginEnd"></m:Text>-->
												<!--	<m:VBox width="100%">-->
												<!--		<m:ComboBox width="100%" selectedKey="{HeaderDetailsModel>/orderTypeSetKey}" items="{HeaderDetailsModel>/orderTypeSetDD}">-->
												<!--			<core:Item key="{HeaderDetailsModel>Auart}" text="{HeaderDetailsModel>Auart}"/>-->
												<!--		</m:ComboBox>-->
												<!--	</m:VBox>-->
												<!--</m:HBox>-->
											</l:Grid>
											<l:Grid containerQuery="true" defaultSpan="XL4 L4 M4 S4" class="sapUiSizeCompact sapUiMediumMarginTop">
												<m:VBox class="sapUiSmallMarginBegin" width="100%">
													<m:Label design="Bold" text="Types Of Applications" required="true"/>
													<m:VBox width="100%">
														<m:ComboBox width="100%" selectedKey="{HeaderDetailsModel>/typoofApplicationKey}" items="{HeaderDetailsModel>/typoofApplicationDD}">
															<core:Item key="{HeaderDetailsModel>DomValue}" text="{HeaderDetailsModel>Ddtext}"/>
														</m:ComboBox>
													</m:VBox>
												</m:VBox>
												<m:VBox class="sapUiSmallMarginBegin" width="100%">
													<m:Label design="Bold" text="Type Of Order" required="true"/>
													<m:VBox width="100%">
														<m:ComboBox width="100%" selectedKey="{HeaderDetailsModel>/typoofOrderKey}" items="{HeaderDetailsModel>/typoofOrderDD}">
															<core:Item key="{HeaderDetailsModel>DomValue}" text="{HeaderDetailsModel>Ddtext}"/>
														</m:ComboBox>
													</m:VBox>
												</m:VBox>
												<m:VBox class="sapUiSmallMarginBegin" width="100%">
													<m:Label design="Bold" text="Check List" required="true"/>
													<m:VBox>
														<m:CheckBox text="Customer P.O. Scanned and Attached" selected="true"/>
														<m:CheckBox text="Prel. Order Confirmation Sent and Attached"/>
														<m:CheckBox text="Sales Order Confirmation"/>
													</m:VBox>
												</m:VBox>
											</l:Grid>
										</m:VBox>
									</blocks>
								</ObjectPageSubSection>
							</subSections>
						</ObjectPageSection>
						<ObjectPageSection>
							<subSections>
								<ObjectPageSubSection title="Attachments" mode="Expanded">
									<blocks>
										<m:VBox>
											<m:VBox class="sapUiTinyMargin" renderType="Bare">
												<m:MessageStrip class="sapUiTinyMarginBottom" visible="{=!${device>/browser/mobile}}" showIcon="true" type="Information"
													text="To add files, you can also use drag &amp; drop on your desktop or tablet."/>
											</m:VBox>
											<m:VBox>
												<!--<m:UploadCollection id="UploadCollection" maximumFilenameLength="55" maximumFileSize="10" multiple="true" sameFilenameAllowed="true"-->
												<!--	instantUpload="false" uploadEnabled="true" uploadUrl="/sap/opu/odata/sap/ZETO_CREATE_SRV/FileAttachmentSet(Vbeln='0010562790')/$value"-->
												<!--	noDataDescription="Drop files or use the &quot;Add&quot; button to keep files ready for upload" change="onAttachmentChange"-->
												<!--	fileDeleted="onFileDeleted" filenameLengthExceed="onFilenameLengthExceed" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatch"-->
												<!--	uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts"/>-->
												<m:UploadCollection id="oUploadCollection" filenameLengthExceed="onFileNameLengthExceed" maximumFilenameLength="100" multiple="true"
													showSeparators="None" items="{AttachmentsModel>/attachmentSet}" instantUpload="false"
													noDataDescription="Drop files or use the '+' button for pending upload" change="onChange" fileDeleted="onFileDelete"
													beforeUploadStarts="onBeforeUploadStarts" uploadComplete="onUploadComplete">
													<m:items>
														<m:UploadCollectionItem fileName="{Filename}" mimeType="{Mimetype}"
															url="{parts: ['localAttachmentModel>/Filename','localAttachmentModel>/Filecontent']}" enableEdit="false" documentId="{Attach}"
															enableDelete="true" visibleDelete="false" visibleEdit="false"></m:UploadCollectionItem>
													</m:items>
												</m:UploadCollection>
											</m:VBox>
										</m:VBox>
									</blocks>
								</ObjectPageSubSection>
							</subSections>
						</ObjectPageSection>
						<ObjectPageSection>
							<subSections>
								<ObjectPageSubSection title="Notes" mode="Expanded">
									<blocks>
										<m:VBox class="sapUiTinyMargin" renderType="Bare">
											<m:Label text="Write notes here"/>
											<m:TextArea id="TextArea2" value="{HeaderDetailsModel>/Notes}" cols="200" height="100px"/>
										</m:VBox>
									</blocks>
								</ObjectPageSubSection>
							</subSections>
						</ObjectPageSection>
					</sections>
				</ObjectPageLayout>
			</m:content>
			<m:footer>
				<m:Bar id="__bar1">
					<m:contentLeft>
						<m:Button text="Back" width="100px" id="__button9" type="Emphasized" press="onBack" tooltip="Back"/>
					</m:contentLeft>
					<m:contentRight>
						<m:Button text="Approve" width="100px" id="Approve" type="Accept" tooltip="Approve" press="completeCpar" visible="false"/>
						<m:Button text="Reject" width="100px" id="Reject" type="Reject" tooltip="Reject" press="rejectCpar" visible="false"/>
						<m:Button text="Submit" width="100px" id="Complete" type="Emphasized" press="onPressSubmit" tooltip="Complete"/>
					</m:contentRight>
				</m:Bar>
			</m:footer>
		</m:Page>
	</m:App>
</core:View>